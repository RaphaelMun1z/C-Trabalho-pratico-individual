#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <unistd.h>  // Para a funÃ§Ã£o sleep

int main() {
    srand(time(NULL));
    
    const char *emojis[5] = {"ğŸœ", "ğŸ", "ğŸ", "ğŸŒŸ", "ğŸš€"};
    
    // ImpressÃ£o da estrutura inicial
    for (int ii = 0; ii < 3; ii++) {
        printf("|       |  ");
    }
    
    printf("\n");
    
    for (int ii = 0; ii < 3; ii++) {
        printf("---------  ");
    }
    
    printf("\n");
    
    printf("\x1b[32m\n");
    
    for (int ii = 0; ii < 3; ii++) {
        printf("---------  ");
    }
    
    printf("\n");
    
    // Loop para imprimir emojis com delay
    for (int jj = 0; jj < 3; jj++) {
        for (int ii = 0; ii < 3; ii++) {
            if (jj == 1) {
                printf("|   ");    
                fflush(stdout);  // ForÃ§a a saÃ­da imediatamente
                sleep(2);  
                printf("%s", emojis[rand() % 5]); // Parte 2
                printf("   |  ");  
                      // Delay de 1 segundo
            } else {
                printf("|       |  ");
            }
        }
        printf("\n");
    }
    
    // ImpressÃ£o da estrutura final
    for (int ii = 0; ii < 3; ii++) {
        printf("---------  ");
    }
    
    printf("\n");
    
    printf("\e[0;37m\n");
    
    for (int ii = 0; ii < 3; ii++) {
        printf("---------  ");
    }
    
    printf("\n");
    
    for (int ii = 0; ii < 3; ii++) {
        printf("|       |  ");
    }
    
    return 0;
}
